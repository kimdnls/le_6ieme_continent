<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Contact Page</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
</head>
<body>
  <!-- Banner Section -->
  <div class="banner_sticky navbar navbar-dark bg-dark">
    <div class="container-fluid text-center">
      <div class="row w-100">
        <div class="col-12">
          <div class="logo-container text-center">
            <%= link_to root_path do %>
              <%= image_tag 'logo.jpg', alt: 'Logo', class: 'logo mx-auto d-block' %>
            <% end %>
          </div>
        </div>
        <div class="col-12">
          <div class="navbar-nav justify-content-center">
            <ul class="navbar-nav">
              <li class="nav-item"><%= link_to "Lunch", lunch_path, class: "nav-link invisible-button" %></li>
              <li class="nav-item"><%= link_to "Événements", evenements_path, class: "nav-link invisible-button" %></li>
              <li class="nav-item"><%= link_to "Plats Signatures", plats_path, class: "nav-link invisible-button" %></li>
              <li class="nav-item"><%= link_to "Photos", photos_path, class: "nav-link invisible-button" %></li>
              <li class="nav-item"><%= link_to "Contact", contact_path, class: "nav-link invisible-button" %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Contact Banner -->
  <div class="contact-banner">
    <%= image_tag 'contact.png', alt: 'Tapas Image', class: 'contact-image img-fluid w-100' %>
  </div>

  <!-- Contact Information -->
  <div class="container my-5 contact-container">
    <div class="row">
      <div class="col-md-6 contact-info">
        <h1 class="contact-title">Nous contacter</h1>
        <p>Le 6ième Continent parc 2000</p>
        <p>84 Rue Maurice Béjahrt</p>
        <p>34080 Montpellier</p>
      </div>
      <div class="col-md-6 contact-email">
        <h2>le6iemecontinent@gmail.com</h2>
        <h2>06.12.60.12.45</h2>
      </div>
    </div>
  </div>

  <%= javascript_include_tag 'application' %>
</body>
</html>
